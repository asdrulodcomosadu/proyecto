<div class="p-4">
    <a href="/links/admin" class="text-white"><button type="button" class="btn red accent-4"><i
                class="fas fa-arrow-left"></i></button></a>
</div>
<div class="m-3 p-2">
    <table id="example" class="display" style="width:100%">
        <thead>
            <tr>
                <th>id</th>
                <th>id Usuario</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>identificación</th>
                <th>Celular</th>
                <th>Placa</th>
                <th>Modelo</th>
                <th>Estrellas</th>
                <th>votantes</th>
                <th>Gestionar</th>
            </tr>
        </thead>
        <tbody>
            {{#each driversB}}
            <tr>
                <td>{{id}}</td>
                <td>{{idUser}}</td>
                <td>{{nombre}}</td>
                <td>{{apellido}}</td>
                <td>{{identificacion}}</td>
                <td>{{celular}}</td>
                <td>{{placa}}</td>
                <td>{{modelo}}</td>
                <td>{{estrellas}}</td>
                <td>{{votantes}}</td>
                <td>

                      <form action="/links/badDriver/{{id}}" class="ActionForm">
                        <button type="submit" class="btn  red darken-3"><i class="fa fa-trash"
                                aria-hidden="true"></i></button>
                    </form>
                    
                </td>

            </tr>
            {{else}}
            <h4>No hay pasajeros registrados</h4>
            {{/each}}

        </tbody>
    </table>
</div>
<script>
    $('.ActionForm').submit(function (e) {
        e.preventDefault();
        Swal.fire({
            title: 'Confirmación',
            text: "¿De verdad quieres inhabilitar este conductor?",
            icon: 'info',
            showCancelButton: true,
            confirmButtonColor: '#c51162',
            cancelButtonText: 'No, inhabilitar',
            confirmButtonText: 'Si, inhabilitar',
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                this.submit();
            }
        })
    });
</script>