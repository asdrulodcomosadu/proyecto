<div class="p-4">
  <a href="/links/admin" class="text-white"><button type="button" class="btn red accent-4"><i
                class="fas fa-arrow-left"></i></button></a>
</div>
<div class="m-2 p-2">
    <table id="example" class="display">
        <thead>
            <tr>
                <th>id</th>
                <th>id Conductor</th>
                <th>fecha en que empieza la ruta</th>
                <th>Fecha actualización</th>
                <th>precio pagar</th>
                <th>Link</th>
                <th>Gestión</th>
            </tr>
        </thead>
        <tbody>
            {{#each inactividad}}
            <tr>
                <td>{{id}}</td>
                <td>{{idConductor}}</td>
                <td>{{fechaInicial}}</td>
                <td>{{fechaCreacion}}</td>
                <td>{{precioPagar}}</td>
                <td>{{linkCobro}}</td>
                <td>
                     <form action="/links/dRutaInactiva/{{id}}" class="ActionForm">
                        <button type="submit" class="btn  red darken-3"><i class="fa fa-trash"
                                aria-hidden="true"></i></button>
                    </form>
            </tr>
            {{else}}
            <h4>No hay rutas registradas</h4>
            {{/each}}

        </tbody>
    </table>
</div>

<script>
    $('.ActionForm').submit(function (e) {
        e.preventDefault();
        Swal.fire({
            title: 'Confirmación',
            text: "¿De verdad quieres eliminar esta ruta?",
            icon: 'info',
            showCancelButton: true,
            confirmButtonColor: '#c51162',
            cancelButtonText: 'No, Eliminar',
            confirmButtonText: 'Si, Eliminar',
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                this.submit();
            }
        })
    });
</script>